<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="${relativePackage}.${activityClass}" >

    <EditText
        android:id="@+id/message_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Please input an a message"
        android:minHeight="200dp" 
        android:gravity="top"
        android:inputType="text"
        android:imeActionLabel="Send"
        android:background="@color/transparent"
        >

    </EditText>
	
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/border_layout"
        >
        <ImageButton
        android:id="@+id/post_message_ib"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/message_input"
        android:layout_weight="1"
        android:src="@drawable/capsule_grey"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
         />
    	<ImageButton 
        android:id="@+id/add_pic_ib"
        android:layout_weight="1"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:src="@drawable/camera_icon_grey"
        android:scaleType="fitCenter"
        />
    </LinearLayout>
    
    <TextView 
        android:id="@+id/location_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_input"
        android:textSize="25dp"
        android:padding="5dp"
        android:textColor="@color/grey"
        android:textColorHighlight="@color/pink"
        android:clickable="true"
        
        />
    
    <ImageView 
        android:id="@+id/attached_pic_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="${relativePackage}.${activityClass}" >

    <EditText
        android:id="@+id/message_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please input an a message">  
    </EditText>

    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_below="@+id/location_tv">
	    
	    <RadioButton
        android:id="@+id/puzzle_type_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_message_button"
        android:text="puzzle" />

    	<RadioButton
        android:id="@+id/time_capsule_type_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/puzzle_type_radio"
        android:text="time_capsule" />
	    
	    
	</LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
        android:id="@+id/post_message_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_input"
        android:text="send" />
    	<Button 
        android:id="@+id/add_pic_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Pic"/>
    </LinearLayout>
    
    <TextView 
        android:id="@+id/location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_input"
        />
    
    <ImageView 
        android:id="@+id/attached_pic_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>

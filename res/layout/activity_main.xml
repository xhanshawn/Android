<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/buttons_panel_fl"
    >
	<RelativeLayout 
	    
	    android:id="@+id/buttons_panel_rl"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    >
	    	<Button
	    	    android:id="@+id/latalk_label_b"
	    	    android:layout_width="150dp"
	    	    android:layout_height="150dp"
	    	    android:layout_centerHorizontal="true"
	    	    android:layout_centerVertical="true"
	    	    android:background="@drawable/deep_pink_round_b"
	    	    android:text="Latalk"
	    	    android:textColor="@color/white"
	    	    android:textSize="40dp" />
	    	
	    	<ImageButton
	    	    android:id="@+id/create_message_button"
	    	    android:layout_width="100dp"
	    	    android:layout_height="100dp"
	    	   	android:layout_centerVertical="true"
	    	    android:layout_toRightOf="@+id/latalk_label_b"
	    	    android:layout_marginLeft="20dp"
	    	    android:background="@drawable/pink_round_b"
	    	    android:src="@drawable/capsule"
	    	    android:scaleType="fitCenter"
				/>
	    	<Button
			    android:id="@+id/reserved_button6"
			    android:layout_width="100dp"
			    android:layout_height="100dp"
			    android:layout_below="@+id/create_message_button"
			    android:layout_toRightOf="@+id/race_browser_ib"
			    android:background="@drawable/yellow_round_b"
			    android:text="R6"
			    android:textColor="@color/white"
			    android:textSize="20dp" />
	    	<ImageButton
	    	    android:id="@+id/race_browser_ib"
	    	    android:layout_width="100dp"
	    	    android:layout_height="100dp"
	    	    android:layout_below="@+id/latalk_label_b"
	    	    android:layout_centerHorizontal="true"
	    	    android:layout_marginTop="20dp"
	    	    android:src="@drawable/race_icon"
	    	    android:scaleType="fitXY"
	    	    android:padding="5dp"
	    	    android:background="@drawable/green_round_b"
	    	 	/>
	    	
	    	<ImageButton
			    android:id="@+id/reserved_button5"
			    android:layout_width="100dp"
			    android:layout_height="100dp"
			    android:layout_below="@+id/puzzle_race_c_ib"
			    android:layout_toLeftOf="@+id/tc_map_ib"
			    android:background="@drawable/red_round_b"
			    android:text="R5"
			    android:textColor="@color/white"
			    android:textSize="20dp" />
	    	
	    	<ImageButton
	    	    android:id="@+id/puzzle_race_c_ib"
	    	    android:layout_width="100dp"
	    	    android:layout_height="100dp"
	    	    android:layout_toLeftOf="@+id/latalk_label_b"
	    	    android:layout_centerVertical="true"
	    	   	android:layout_marginRight="20dp"
	    	    android:background="@drawable/blue_round_b"
	    	    android:src="@drawable/running_man"
	    	   	android:scaleType="fitXY"
	    	   	android:adjustViewBounds="true"
	    	    ></ImageButton>
	    	
	    	<Button
			    android:id="@+id/reserved_button4"
			    android:layout_width="100dp"
			    android:layout_height="100dp"
			    android:layout_above="@+id/puzzle_race_c_ib"
			    android:layout_toLeftOf="@+id/tc_map_ib"
			    android:background="@drawable/orange_round_b"
			    android:text="R4"
			    android:textColor="@color/white"
			    android:textSize="20dp" />
	    	
	    	<ImageButton
	    	    android:id="@+id/tc_map_ib"
	    	    android:layout_width="100dp"
	    	    android:layout_height="100dp"
	    	    android:layout_above="@+id/latalk_label_b"
	    	    android:layout_marginBottom="20dp"
	    	    android:layout_centerHorizontal="true"
	    	    android:background="@drawable/purple_round_b"
	    	    android:src="@drawable/time_capsule_map_icon"
	    	   	android:scaleType="fitXY"
	    	   	android:adjustViewBounds="true"
	    	    />


			<Button
			    android:id="@+id/reserved_button2"
			    android:layout_width="100dp"
			    android:layout_height="100dp"
			    android:layout_above="@+id/create_message_button"
			    android:layout_toRightOf="@+id/tc_map_ib"
			    android:background="@drawable/deep_blue_round_b"
			    android:text="R2"
			    android:textColor="@color/white"
			    android:textSize="20dp" />

	</RelativeLayout>
</FrameLayout>

